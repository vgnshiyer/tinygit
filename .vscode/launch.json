{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TinyGit: Init",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["init"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/testrepo"
        },
        {
            "name": "TinyGit: Add",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["add", "--file", "tinygit.sh"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/testrepo"
        },
        {
            "name": "TinyGit: Status",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["status"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/testrepo"
        }
    ]
} 